{
	"name": "ladown-webpack-template",
	"version": "1.0.0",
	"description": "Its webpack template for projects",
	"main": "index.js",
	"keywords": [
		"webpack",
		"template",
		"pug",
		"sass",
		"responsive-css",
		"svg-sprite",
		"bemto",
		"additional-files-for-vendors"
	],
	"homepage": "https://github.com/ladown/webpack-template",
	"bugs": {
