	},
	"license": "ISC",
	"author": {
		"name": "Egor Ermilov",
		"email": "egorka33rus52@gmail.com",
		"url": "https://ermilovee.ru"
	},
	"scripts": {
		"dev": "webpack serve -c webpack/webpack.dev.js",
		"build": "webpack -c webpack/webpack.prod.js --env build",
		"prettier": "prettier ./src/**/*.{scss,js,pug} --write",
		"eslint": "eslint ./src/js/**/*.js --fix",
		"lint": "yarn prettier && yarn eslint",
		"zipBuild": "webpack -c webpack/webpack.prod.js && zip -r build.zip build",
		"zipProject": "webpack -c webpack/webpack.prod.js && zip -r ladown-webpack-template.zip . -x 'node_modules/**' -x '.git/**'",
		"prepare": "husky install"
	},
	"devDependencies": {
